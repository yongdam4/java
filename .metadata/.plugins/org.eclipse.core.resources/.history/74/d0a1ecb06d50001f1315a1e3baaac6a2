package e.array;

import java.util.Scanner;

public class Ttt {


	public void count() {
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			System.out.println("문자열을 입력해주세요.");
			String str = sc.nextLine();
			
			if(str == "exit") {
				System.out.println("프로그램을 종료합니다.");
				break;
				if(str != "exit") {
					System.out.println(str.length() + "글자입니다.");
					
				}
				
			}
			
			
		}
		
		
		
	
		
	}
		
	
	
}
